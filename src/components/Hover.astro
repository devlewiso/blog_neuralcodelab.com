---
// Componente Hover.astro - Efecto hover con imagen de Internet
const imageUrl = "/aboutUsMain.jpg"; // Imagen desde /public/
const title = "Neuralcodelab Blog";
const description = "Pasa el cursor para ver la magia.";
---

<div class="hover-container">
  <div class="hover-image">
    <img src={imageUrl} alt="Imagen con efecto hover" style="height: auto;" />
    <div class="hover-overlay">
      <h3>{title}</h3>
      <p>{description}</p>
    </div>
  </div>
</div>

<style>
  .hover-container {
    width: 100%;
    margin: 0 auto;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .hover-image {
    position: relative;
    transition: all 0.3s ease;
  }
  
  .hover-image img {
    width: 100%;
    display: block;
    transition: transform 0.5s ease;
  }
  
  .hover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    padding: 1rem;
    text-align: center;
  }
  
  .hover-image:hover img {
    transform: scale(1.1);
  }
  
  .hover-image:hover .hover-overlay {
    opacity: 1;
  }
  
  .hover-overlay h3 {
    margin: 0;
    font-size: 1.5rem;
    color: #ff7e5f;
  }
  
  .hover-overlay p {
    margin: 0.5rem 0 0;
    font-size: 1rem;
  }
</style>